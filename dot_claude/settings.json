{
  "model": "opusplan",
  "includeCoAuthoredBy": false,
  "env": {
    "NODE_ENV": "development",
    "JAVA_HOME": "/opt/homebrew/opt/openjdk@17",
    "RUST_BACKTRACE": "1",
    "PYTHONPATH": ".",
    "BAZEL_BIN": "./bazel-bin",
    "EDITOR": "idea",
    "SHELL": "zsh"
  },
  "enabledPlugins": {
    "planning-with-files@planning-with-files": true,
    "fullstack-dev-skills@fullstack-dev-skills": true
  },
  "permissions": {
    "allow": [
      "Bash",
      "Bash(bash:*)",
      "Bash(git *)",
      "Bash(npx eslint:*)",
      "Bash(pnpm add:*)",
      "Bash(pnpm install:*)",
      "Bash(pnpm list:*)",
      "Bash(pnpm remove:*)",
      "Bash(pnpm run:*)",
      "Edit",
      "Edit(**)",
      "MultiEdit",
      "NotebookEdit",
      "Read",
      "Read(**)",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Write",
      "mcp__figma-dev-mode-mcp-server__get_code",
      "mcp__figma-dev-mode-mcp-server__get_image",
      "mcp__figma-dev-mode-mcp-server__get_variable_defs",
      "mcp__graphite__run_gt_cmd",
      "mcp__linear__get_issue"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Read(.env*)",
      "Write(.env*)",
      "Write(*.env)",
      "Write(*.lock)",
      "Write(bazel-*)",
      "Read(node_modules/**)",
      "Write(node_modules/**)",
      "Read(.next/**)",
      "Read(Cargo.lock)",
      "Write(Cargo.lock)",
      "Read(cargo_crates.lock)",
      "Write(cargo_crates.lock)",
      "Read(pnpm-lock.yaml)",
      "Write(pnpm-lock.yaml)",
      "Read(maven_install.json)",
      "Write(maven_install.json)",
      "Read(MODULE.bazel.lock)",
      "Write(MODULE.bazel.lock)"
    ],
    "ask": [],
    "defaultMode": "plan"
  },
  "forceLoginMethod": "claudeai",
  "effortLevel": "high"
}
