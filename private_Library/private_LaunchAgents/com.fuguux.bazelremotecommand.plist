<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>com.fuguux.bazelremotecommand</string>
    <key>ProgramArguments</key>
    <array>
      <string>/Users/brian/workspaces/fuguux/core/tools/bazel/run-bazel-remote.sh</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>
    <!-- Runs in minimal environment, adding brew path for az -->
