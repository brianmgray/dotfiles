    <dict>
      <key>PATH</key>
      <string>/opt/homebrew/bin/:/usr/local/bin:/opt/homebrew/bin:/usr/bin:/bin:/usr/sbin:/sbin:$PATH</string>
    </dict>
  </dict>
</plist>
